@page "/Accounting/AccountTypes/Detail/{AccountTypeId?}"
@model AssetManager.Pages.AccountTypeFormModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="bg-light border rounded-3 p-4 mt-4">
    <form method="POST">
        <div class="mb-3 form-floating">
            <input 
                asp-for="AccountType.Name" 
                class="form-control" 
                placeholder="Name"
            />
            <label asp-for="AccountType.Name"></label>
            <span asp-validation-for="AccountType.Name" class="text-danger m-1"></span>
        </div>
        <div class="mb-3 form-floating">
            <select
                asp-for="AccountType.Type"
                asp-items="Model.AccountTypesSelection"
                class="form-select"
                aria-label="Type"
            >
                <option>-</option>
            </select>
            <label asp-for="AccountType.Type"></label>
            <span asp-validation-for="AccountType.Type" class="text-danger m-1"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
